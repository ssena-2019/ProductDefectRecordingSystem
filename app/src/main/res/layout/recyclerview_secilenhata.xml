<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="42dp"
        android:layout_margin="5dp"
        android:background="#FFCBDC"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/textViewSecilenHata"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="#FAF2AA"
            android:backgroundTint="#FFEDF3"
            android:gravity="center_vertical"
            android:text="hata adÄ±"
            android:paddingStart="10dp"/>

        <Button
            android:id="@+id/buttonDelDefect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="15"
            android:background="@drawable/trash5"
            android:onClick="deleteDefect" />

        <Button
            android:id="@+id/buttonPhoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="15"
            android:background="@drawable/photo_icon"
            android:paddingLeft="2dp" />

    </LinearLayout>
</LinearLayout>